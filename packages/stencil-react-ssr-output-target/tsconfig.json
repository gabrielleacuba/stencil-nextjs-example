{
  "compilerOptions": {
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ESNext",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
  },
  "include": [
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
